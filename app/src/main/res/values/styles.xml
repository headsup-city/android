<resources>
    <!-- Add this AppTheme style -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>

        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/white</item>

        <!-- To change the background of options menu-->
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="Widget.Theme.HeadsUp.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>

    <style name="CustomEditText" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:editTextStyle">@style/CustomEditTextStyle</item>
    </style>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/custom_edittext</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@color/gray_800</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/CustomBottomSheetShapeAppearanceOverlay</item>
        <item name="android:background">@color/gray_1200</item>
    </style>

    <style name="CustomBottomSheetShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_400</item>
        <item name="queryBackground">@color/transparent</item>
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="submitBackground">@color/transparent</item>
    </style>

    <style name="PostPopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:popupBackground">@color/black</item>
        <item name="android:itemBackground">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:listDivider">@color/black</item>
        <item name="android:divider">@color/black</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenu.ListView</item>
    </style>

    <style name="PopupMenu.ListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@color/black</item>
        <item name="android:divider">@color/black</item>
        <item name="android:dividerHeight">1px</item>
    </style>

</resources>
